<div>
    <div data-role="box" class="fx-box" data-status="{{ status }}" data-size="{{ size }}">

        <div data-content="ready" data-tab="{{ default_tab }}">

            <div data-role="flip-container" class="flip-container">

                <div class="flipper">

                    <!-- Front -->
                    <div class="front">
                        <!-- front content -->

                        {{#unless hideToolbar}}

                            <div data-role="front-toolbar" class="front-toolbar">

                                {{#unless hideMenu}}

                                    <div class="pull-left">
                                        <div data-role="right-menu" class="dropdown">
                                            <a href="" class="btn dropdown-toggle" data-toggle="dropdown">
                                                <span class="glyphicon glyphicon-menu-hamburger"
                                                      aria-hidden="true">
                                                </span>
                                            </a>
                                        </div>
                                    </div>

                                {{/unless}}

                                <div class="pull-left">
                                    {{#unless hideMetadataButton}}
                                        <button data-action="metadata" class="btn btn-default" type="button">metadata
                                        </button>
                                    {{/unless}}
                                    <span data-role="box-title" data-grid="fx-grid-item-handle"></span>
                                </div>

                                <div class="btn-group pull-right">
                                    {{#unless hideRemoveButton}}
                                        <button data-action="remove" class="btn btn-default" type="button">remove
                                        </button>
                                    {{/unless}}
                                    {{#unless hideResizeButton}}
                                        <button data-action="resize" data-size="2" class="btn btn-default"
                                                type="button">
                                            resize
                                        </button>
                                    {{/unless}}
                                    {{#unless hideCloneButton}}
                                        <button data-action="clone" class="btn btn-default" type="button">clone</button>
                                    {{/unless}}
                                    {{#unless hideMinimizeButton}}
                                        <button data-action="minimize" class="btn btn-default" type="button">minimize
                                        </button>
                                    {{/unless}}
                                    {{#unless hideFlipButton}}
                                        <button data-action="flip" class="btn btn-default" type="button">flip</button>
                                    {{/unless}}
                                </div>
                            </div>

                        {{/unless}}
                        <br>
                        <br>

                        <div data-role="front-content" class="front-content">

                            <div data-section="chart"></div>
                            <div data-section="map"></div>
                            <div data-section="table"></div>
                            <div data-section="blank"></div>
                            <div data-section="metadata"></div>
                            <div data-section="filter"></div>
                            <div data-section="download"></div>

                        </div>

                    </div>

                    <!-- back -->
                    <div class="back">

                        {{#unless hideToolbar}}
                            <!-- back content -->
                            <div data-role="back-toolbar">
                                <button data-action="flip" class="btn btn-default pull-right" type="button">flip
                                </button>
                            </div>
                        {{/unless}}

                        <div data-role="back-content" class="container-fluid">
                            <div class="alert alert-danger" role="alert" data-role="filter-error">...</div>
                            <div class="row back-row">
                                <div data-role='back-sidebar' class="col-xs-12 col-sm-8 col-md-3 hidden-xs hidden-sm">
                                    <h4>{{ back_current_resource }}</h4>
                                    <ul data-role='process-steps' class="list-unstyled list-group well"></ul>

                                </div>
                                <button data-action="show-back-sidebar" class="btn btn-default visible-sm visible-xs" type="button">
                                  SIDEBAR
                                </button>

                                <div class="col-md-9 col-xs-12">
                                    <ul data-role="process-details" class="list-unstyled list-group">
                                    </ul>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-12">
                                    <button type="button" data-action="query" class="btn btn-default pull-right"
                                            disabled>{{submit_button}}</button>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

        </div>

        <div data-content="error" class="text-center">
            <div data-role="error-text">

            </div>
            <div data-role="error-button">
                <button data-action="filter" class="btn btn-default" type="button">
                    <span class="glyphicon glyphicon-filter" aria-hidden="true"></span>
                </button>
            </div>

        </div>

        <div data-content="loading" class="text-center">
            <span class="loading loading-48"></span>
        </div>

        <div data-content="empty" class="text-center">
            Empty
            <button data-action="filter" class="btn btn-default" type="button">
                <span class="glyphicon glyphicon-filter" aria-hidden="true"></span>
            </button>
        </div>

        <!-- Modal -->
        <div class="modal fade" data-role="modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                                aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title">
                            <span data-action="download-metadata" class="glyphicon glyphicon-cloud-download"
                                  aria-hidden="true"></span> FENIX metadata</h4>
                    </div>
                    <div class="modal-body">
                        <div data-role="metadata-container"></div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <li data-role="step-metadata" data-tab="{{ id }}">
        <h3>{{ labels.title }}</h3>
        {{ i18n metadata.title}} <br>
        {{ metadata.uid }} <br>
        {{ metadata.version }}
    </li>

    <li data-role="step-filter" data-tab="{{ id }}">
        <h3>{{ labels.title }}</h3>
    </li>

    <li data-role="step-map" data-tab="{{ id }}">
        <h3>map</h3>
    </li>    

    <div data-role="filter-aggregation-template">

        <div class="row" data-selector="aggregations">
            <div class="col-md-4">
                <div data-sortable-list data-group="dimensions">
                    <h3>{{ aggregations_dimensions }}</h3>
                    <ul class="filter-sortable-list list-unstyled list-group"></ul>
                </div>
            </div>
            <div class="col-md-4">
                <div data-sortable-list data-group="group">
                    <h3>{{ aggregations_group }}</h3>
                    <ul class="filter-sortable-list list-unstyled list-group"></ul>
                </div>
            </div>
            <div class="col-md-4">
                <div data-sortable-list data-group="sum">
                    <h3>{{ aggregations_sum }}</h3>
                    <ul class="filter-sortable-list list-unstyled list-group"></ul>
                </div>
                <div data-sortable-list data-group="avg">
                    <h3>{{ aggregations_avg }}</h3>
                    <ul class="filter-sortable-list list-unstyled list-group"></ul>
                </div>
                <div data-sortable-list data-group="first">
                    <h3>{{ aggregations_first}}</h3>
                    <ul class="filter-sortable-list list-unstyled list-group"></ul>
                </div>
                <div data-sortable-list data-group="last">
                    <h3>{{ aggregations_last }}</h3>
                    <ul class="filter-sortable-list list-unstyled list-group"></ul>
                </div>

            </div>
        </div>
    </div>

    <div data-role="filter-rows-template">

        <!-- Slider main container -->
        <div data-role='filter-rows-swiper' class="swiper-container">
            <!-- Additional required wrapper -->
            <div class="swiper-wrapper">

                {{#each columns}}
                    <div class="swiper-slide">
                        <div data-selector="filter_{{this.id}}"></div>
                        <div data-selector="order_{{this.id}}"></div>
                    </div>
                {{/each}}

            </div>
            <!-- If we need pagination -->
            <div class="swiper-pagination"></div>

            <!-- If we need navigation buttons -->
            <div class="swiper-button-prev"></div>
            <div class="swiper-button-next"></div>

        </div>

    </div>

    <div data-role="filter-map-template">

        <h1>[[selections of map layers]]</h1>

    </div>    
</div>