<div>
        <div data-role="box" class="fx-box" data-status="{{ status }}" data-size="{{ size }}" >

        <div data-content="ready" data-tab="{{ default_tab }}">

            <div data-role="flip-container" class="flip-container">

                <div class="flipper">

                    <!-- Front -->
                    <div class="front" data-face="front">
                        <!-- front content -->

                        {{#unless hideToolbar}}

                            <div data-role="front-toolbar" class="vb-toolbar front-toolbar clearfix">

                                {{#unless hideMenu}}

                                    <div class="toolbar-cmd-left">
                                        <div data-role="right-menu" class="dropdown pull-left">

                                            <button class="btn btn-default" type="button" data-toggle="dropdown">
                                                <span class="icojam_preview_list"></span>
                                            </button>
                                        </div>
                                        {{#unless hideMetadataButton}}
                                            <button data-action="metadata" class="btn btn-default meta-btn pull-left"
                                                    type="button">META
                                            </button>
                                        {{/unless}}
                                    </div>

                                {{/unless}}

                                <h6 data-role="box-title" class="box-title truncate"
                                    data-grid="fx-grid-item-handle"></h6>

                                <div class="btn-group toolbar-cmd-right">
                                    {{#unless hideFlipButton}}
                                        <button data-action="flip" class="btn btn-default" type="button">
                                            <span class="icojam_options_1"></span>
                                        </button>
                                    {{/unless}}
                                    {{#unless hideDownloadButton}}
                                        <button data-action="download" data-target="data" class="btn btn-default"
                                                type="button">
                                            <span class="icojam_swap_horizontal_1"></span>
                                        </button>
                                    {{/unless}}
                                    {{#unless hideCloneButton}}
                                        <button data-action="clone" class="btn btn-default" type="button">
                                            <span class="icojam_wedding_jewel"></span>
                                        </button>
                                    {{/unless}}
                                    {{#unless hideMinimizeButton}}
                                        <button data-action="minimize" class="btn btn-default" type="button">
                                            <span class="icojam_view_roll-up_1"></span>
                                        </button>
                                    {{/unless}}
                                    {{#unless hideRemoveButton}}
                                        <button data-action="remove" class="btn btn-default" type="button">
                                            <span class="icojam_button_delete_1"></span>
                                        </button>
                                    {{/unless}}

                                </div>
                            </div>

                        {{/unless}}

                        <div data-role="front-content" class="front-content">

                            <div data-section="chart"></div>
                            <div data-section="map"></div>
                            <div data-section="table"></div>
                            <div data-section="blank"></div>
                            <div data-section="metadata"></div>
                            <div data-section="filter"></div>
                            <div data-section="download"></div>

                        </div>

                    </div>

                    <!-- back -->
                    <div class="back" data-face="back">

                        {{#unless hideToolbar}}

                            <div data-role="back-toolbar" class="vb-toolbar back-toolbar clearfix">

                                {{#unless hideMenu}}

                                    <div class="toolbar-cmd-left">
                                        <div data-role="right-menu" class="dropdown pull-left">

                                            <button class="btn btn-default" type="button" data-toggle="dropdown">
                                                <span class="icojam_preview_list"></span>
                                            </button>
                                        </div>
                                        {{#unless hideMetadataButton}}
                                            <button data-action="metadata" class="btn btn-default meta-btn pull-left"
                                                    type="button">META
                                            </button>
                                        {{/unless}}
                                    </div>

                                {{/unless}}

                                <h6 data-role="box-title" class="box-title truncate"></h6>

                                <div class="btn-group toolbar-cmd-right">
                                    {{#unless hideFlipButton}}
                                        <button data-action="flip" class="btn btn-default" type="button">
                                            <span class="icojam_options_1"></span>
                                        </button>
                                    {{/unless}}
                                    {{#unless hideResizeButton}}
                                        <button data-action="resize" data-size="2" class="btn btn-default"
                                                type="button">
                                            <span class="icojam_swap_horizontal_1"></span>
                                        </button>
                                    {{/unless}}
                                    {{#unless hideCloneButton}}
                                        <button data-action="clone" class="btn btn-default" type="button">
                                            <span class="icojam_wedding_jewel"></span>
                                        </button>
                                    {{/unless}}
                                    {{#unless hideMinimizeButton}}
                                        <button data-action="minimize" class="btn btn-default" type="button">
                                            <span class="icojam_view_roll-up_1"></span>
                                        </button>
                                    {{/unless}}
                                    {{#unless hideRemoveButton}}
                                        <button data-action="remove" class="btn btn-default" type="button">
                                            <span class="icojam_button_delete_1"></span>
                                        </button>
                                    {{/unless}}

                                </div>
                            </div>

                        {{/unless}}


                        <div data-role="back-content" class="container-fluid back-content">
                            <div class="alert alert-danger" role="alert" data-role="filter-error">...</div>
                            <div class="row back-row">
                                <div data-role='back-sidebar' class="col-xs-12 col-sm-8 col-md-4 hidden-xs hidden-sm">
                                    <div class="sidebar-content">
                                        <h6 class="sidebar-title">{{ back_current_resource }}</h6>
                                        <div class="process-steps-container">
                                            <ul data-role='process-steps' class="list-unstyled list-group"></ul>
                                        </div>

                                    </div>
                                </div>
                                <!--<button data-action="show-back-sidebar" class="btn btn-default visible-sm visible-xs show-back-sidebar" type="button">-->
                                    <!--SIDEBAR-->
                                <!--</button>-->

                                <button data-action="show-back-sidebar" class="btn btn-floating btn-fx-toolbar visible-sm visible-xs show-back-sidebar" type="button"><span class="icojam_grid_32"></span></button>

                                <div class="col-md-8 col-xs-12 back-right-content">

                                    <ul data-role="process-details"
                                        class="list-unstyled list-group process-details"></ul>

                                    <div class="row">
                                        <div class="col-xs-12">
                                            <div class="btn-group pull-right back-btns">

                                                <button type="button" data-action="flip" class="btn btn-default">{{cancel_button}}
                                                </button>
                                                <button type="button" data-action="query" class="btn btn-primary"
                                                        disabled>{{submit_button}}</button>
                                            </div>
                                        </div>
                                    </div>

                                </div>

                            </div>
                        </div>

                    </div>

                </div>

            </div>

        </div>

        <div data-content="error" class="text-center">

            <div data-role="error-text"></div>

            <div data-role="error-button">
                <button data-action="filter" class="btn btn-default" type="button">
                    <span class="glyphicon glyphicon-filter" aria-hidden="true"></span>
                </button>
            </div>

        </div>

        <div data-content="loading" class="text-center">
            <span class="loading loading-48"></span>
        </div>

        <div data-content="empty" class="text-center">
            Empty
            <button data-action="filter" class="btn btn-default" type="button">
                <span class="glyphicon glyphicon-filter" aria-hidden="true"></span>
            </button>
        </div>

            <div data-content="huge" class="text-center">
                TOO BIG
                <button data-action="filter" class="btn btn-default" type="button">
                    <span class="glyphicon glyphicon-filter" aria-hidden="true"></span>
                </button>
            </div>

        <!-- Modal -->
        <div class="modal fade" data-role="modal" tabindex="-1" role="dialog">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                                aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title">
                            <span data-action="download" data-target="metadata" class="glyphicon glyphicon-cloud-download"
                                  aria-hidden="true"></span> FENIX metadata</h4>
                    </div>
                    <div class="modal-body">
                        <div data-role="metadata-container"></div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <li data-role="step-metadata" class="step-container" data-tab="{{ id }}" data-resourceRepresentationType="{{ metadata.meContent.resourceRepresentationType}}">
        <span class="step-icon icojam_box"></span>
        <h6 class="truncate step-title">{{ i18n metadata.title}}</h6>

    </li>

    <li data-role="step-filter" class="step-container" data-tab="{{ id }}">
        <span class="step-icon icojam_filter"></span>
        <h6 class="truncate step-title">{{ labels.title }}</h6>
    </li>

    <li data-role="step-map" class="step-container" data-tab="{{ id }}">
        <span class="step-icon icojam_languages"></span>
        <h6 class="truncate step-title">{{ labels.title }}</h6>
    </li>


    <div data-role="filter-aggregation-template">

        <div data-selector="aggregations">

        </div>
    </div>

    <div data-role="filter-filter-template">

        <!-- Slider main container -->
        <div data-role='filter-rows-swiper' class="swiper-container">
            <!-- Additional required wrapper -->
            <div class="swiper-wrapper">

                {{#each columns}}
                    <div class="swiper-slide filter-slide ">
                        <div data-selector="{{this.id}}"></div>
                    </div>
                {{/each}}

            </div>
            <!-- If we need pagination -->
            <div class="swiper-pagination"></div>

            <!-- If we need navigation buttons -->
            <div class="swiper-button-prev"></div>
            <div class="swiper-button-next"></div>

        </div>

    </div>

    <div data-role="filter-map-template">

    </div>
</div>
